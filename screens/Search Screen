package com.example.myapplication.screens

import androidx.compose.foundation.Canvas
import androidx.compose.foundation.background
import androidx.compose.foundation.layout.*
import androidx.compose.foundation.lazy.LazyRow
import androidx.compose.foundation.lazy.items
import androidx.compose.foundation.shape.CircleShape
import androidx.compose.foundation.shape.RoundedCornerShape
import androidx.compose.foundation.text.BasicTextField
import androidx.compose.material.icons.Icons
import androidx.compose.material.icons.filled.ArrowBack
import androidx.compose.material.icons.filled.FilterList
import androidx.compose.material.icons.filled.Search
import androidx.compose.material3.*
import androidx.compose.runtime.*
import androidx.compose.ui.Alignment
import androidx.compose.ui.Modifier
import androidx.compose.ui.graphics.Color
import androidx.compose.ui.text.TextStyle
import androidx.compose.ui.text.font.FontWeight
import androidx.compose.ui.unit.dp
import androidx.compose.ui.unit.sp
import com.example.myapplication.components.FilterOptionUI
import com.example.myapplication.model.Filters

@OptIn(ExperimentalMaterial3Api::class)
@Composable
fun SearchScreen() {

    // State for the search input
    var searchText by remember { mutableStateOf("") }

    // List of filter options for the search screen
    val filterOptions = listOf(
        Filters("All"),
        Filters("Free Delivery"),
        Filters("Top Rated"),
        Filters("Fast"),
        Filters("Promo")
    )

    // Scaffold for top app bar and main content
    Scaffold(
        topBar = {
            // TopAppBar with back button and title
            TopAppBar(
                navigationIcon = {
                    // Back button with circular background
                    Box(
                        modifier = Modifier
                            .size(50.dp)
                            .padding(5.dp),
                        contentAlignment = Alignment.Center
                    ) {
                        Canvas(modifier = Modifier.fillMaxSize()) {
                            drawCircle(
                                color = Color(0xFF858181),
                                radius = size.minDimension / 2,
                                alpha = 0.1f
                            )
                        }
                        Icon(
                            imageVector = Icons.Default.ArrowBack,
                            contentDescription = "Back Button"
                        )
                    }
                },
                title = {
                    // Screen title
                    Text(
                        text = "Restaurant",
                        fontWeight = FontWeight.SemiBold
                    )
                }
            )
        }
    ) { innerPadding ->

        // Main column for screen content
        Column(
            modifier = Modifier
                .fillMaxSize()
                .padding(innerPadding)
        ) {

            // Divider line below the top bar
            Box(
                modifier = Modifier
                    .fillMaxWidth()
                    .height(1.dp)
                    .background(color = Color(0xFFEDEDED))
            )

            Column(
                modifier = Modifier
                    .fillMaxSize()
                    .padding(15.dp)
            ) {
                // Row containing search bar and filter button
                Row(
                    modifier = Modifier.fillMaxWidth(),
                    horizontalArrangement = Arrangement.SpaceBetween
                ) {

                    // Search bar container
                    Box(
                        modifier = Modifier
                            .weight(1f)
                            .height(48.dp)
                            .background(
                                color = Color(0xFFECE5E5),
                                shape = RoundedCornerShape(25.dp)
                            )
                    ) {
                        Row(
                            modifier = Modifier.padding(10.dp),
                            verticalAlignment = Alignment.CenterVertically
                        ) {
                            // Search icon inside search bar
                            Icon(
                                imageVector = Icons.Default.Search,
                                contentDescription = "Search",
                                tint = Color.Gray
                            )

                            Spacer(modifier = Modifier.width(8.dp))

                            // Text input field for search
                            BasicTextField(
                                value = searchText,
                                onValueChange = { searchText = it },
                                singleLine = true,
                                modifier = Modifier
                                    .fillMaxWidth()
                                    .padding(vertical = 2.dp),
                                textStyle = TextStyle(
                                    fontSize = 16.sp,
                                    color = Color.Black
                                ),
                                decorationBox = { innerTextField ->
                                    // Placeholder text
                                    if (searchText.isEmpty()) {
                                        Text(
                                            text = "Search restaurants & dishes...",
                                            color = Color.DarkGray,
                                            fontSize = 16.sp
                                        )
                                    }
                                    innerTextField()
                                }
                            )
                        }
                    }

                    Spacer(modifier = Modifier.width(12.dp))

                    // Filter button with circular orange background
                    Box(
                        modifier = Modifier
                            .size(50.dp),
                        contentAlignment = Alignment.Center
                    ) {
                        Canvas(modifier = Modifier.fillMaxSize()) {
                            drawCircle(
                                color = Color(0xFFFF6D00),
                                radius = size.minDimension / 2
                            )
                        }

                        Icon(
                            imageVector = Icons.Default.FilterList,
                            contentDescription = "Filter",
                            tint = Color.White
                        )
                    }
                }

                Spacer(modifier = Modifier.height(10.dp))

                // Horizontal scrollable row of filter options
                LazyRow(
                    modifier = Modifier.fillMaxWidth(),
                    horizontalArrangement = Arrangement.spacedBy(8.dp)
                ) {
                    items(filterOptions) { option ->
                        FilterOptionUI(option) // Composable that displays each filter
                    }
                }

                Spacer(modifier = Modifier.height(15.dp))

                // Text showing number of restaurants found
                Text(
                    text = "4 Restaurants Found",
                    color = Color.Gray,
                    fontSize = 17.sp
                )
            }
        }
    }
}
