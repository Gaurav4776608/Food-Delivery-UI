package com.example.myapplication.screens

import androidx.compose.foundation.Canvas
import androidx.compose.foundation.background
import androidx.compose.foundation.layout.*
import androidx.compose.foundation.lazy.LazyColumn
import androidx.compose.foundation.lazy.LazyRow
import androidx.compose.foundation.lazy.items
import androidx.compose.foundation.shape.RoundedCornerShape
import androidx.compose.foundation.text.BasicTextField
import androidx.compose.material.icons.Icons
import androidx.compose.material.icons.filled.*
import androidx.compose.material.icons.outlined.LocationOn
import androidx.compose.material.icons.outlined.Notifications
import androidx.compose.material.icons.outlined.Search
import androidx.compose.material3.ExperimentalMaterial3Api
import androidx.compose.material3.Icon
import androidx.compose.material3.Scaffold
import androidx.compose.material3.Text
import androidx.compose.material3.TopAppBar
import androidx.compose.runtime.*
import androidx.compose.ui.Alignment
import androidx.compose.ui.Modifier
import androidx.compose.ui.graphics.Brush
import androidx.compose.ui.graphics.Color
import androidx.compose.ui.text.TextStyle
import androidx.compose.ui.text.font.FontWeight
import androidx.compose.ui.unit.dp
import androidx.compose.ui.unit.sp
import com.example.myapplication.R
import com.example.myapplication.components.CategoryItemUI
import com.example.myapplication.components.RestaurantCard
import com.example.myapplication.model.Category
import com.example.myapplication.model.Restaurant

@OptIn(ExperimentalMaterial3Api::class)
@Composable
fun HomeScreen() {

    var searchText by remember { mutableStateOf("") }

    val categories = listOf(
        Category("Burger", Icons.Default.Fastfood),
        Category("Pizza", Icons.Default.LocalPizza),
        Category("Healthy", Icons.Default.Eco),
        Category("Chicken", Icons.Filled.Circle),
        Category("Asian", Icons.Default.RamenDining),
        Category("Drinks", Icons.Default.LocalBar),
        Category("Mexican", Icons.Default.Restaurant),
        Category("Ice Cream", Icons.Default.Icecream)
    )

    val restaurants = listOf(
        Restaurant("Flavours of India", 5.0f, "India", "Biryani", "Best Food", "20-25 min", "Free Delivery", R.drawable.chicken_biryani),
        Restaurant("Meethon Ka Ghar", 4.7f, "India", "Kheer", "Dessert", "15-20 min", "₹40", R.drawable.kheer),
        Restaurant("Burger Plaza", 4.7f, "America", "Burger", "Fast Food", "15-20 min", "₹25", R.drawable.chicken_burger),
        Restaurant("Pizza Roma", 4.9f, "Italy", "Pizza", "Traditional Food", "20-25 min", "₹25", R.drawable.pizza)
    )

    Scaffold(
        topBar = {
            TopAppBar(
                navigationIcon = {
                    Box(
                        modifier = Modifier.size(50.dp),
                        contentAlignment = Alignment.Center
                    ) {
                        Canvas(modifier = Modifier.fillMaxSize()) {
                            drawCircle(
                                color = Color(0xFFFF6D00),
                                radius = size.minDimension / 2,
                                alpha = 0.1f
                            )
                        }
                        Icon(
                            imageVector = Icons.Outlined.LocationOn,
                            contentDescription = null,
                            tint = Color(0xFFFF6D00)
                        )
                    }
                },
                title = {
                    Column {
                        Text("Deliver to", fontSize = 15.sp, color = Color.Gray)
                        Row(verticalAlignment = Alignment.CenterVertically) {
                            Text("Home", fontWeight = FontWeight.Bold)
                            Icon(Icons.Default.KeyboardArrowDown, null)
                        }
                    }
                },
                actions = {
                    Box(
                        modifier = Modifier.size(50.dp),
                        contentAlignment = Alignment.Center
                    ) {
                        Canvas(modifier = Modifier.fillMaxSize()) {
                            drawCircle(
                                color = Color(0xFF858181),
                                radius = size.minDimension / 2,
                                alpha = 0.1f
                            )
                        }
                        Icon(Icons.Outlined.Notifications, null)
                    }
                }
            )
        }
    ) { innerPadding ->

        LazyColumn(
            modifier = Modifier
                .padding(innerPadding)
                .fillMaxSize(),
            verticalArrangement = Arrangement.spacedBy(12.dp)
        ) {

            item {
                Box(
                    modifier = Modifier
                        .fillMaxWidth()
                        .height(1.dp)
                        .background(Color(0xFFEDEDED))
                )
            }

            item {
                Column(modifier = Modifier.padding(horizontal = 15.dp)) {
                    Text(
                        text = "Good Morning, Alex!",
                        fontSize = 30.sp,
                        fontWeight = FontWeight.Bold
                    )
                    Text(
                        text = "What would you like to eat?",
                        color = Color.Gray,
                        fontSize = 17.sp
                    )
                }
            }

            item {
                Box(
                    modifier = Modifier
                        .padding(horizontal = 15.dp)
                        .height(50.dp)
                        .background(Color(0xFFECE5E5), RoundedCornerShape(25.dp)),
                    contentAlignment = Alignment.Center
                ) {
                    Row(modifier = Modifier.padding(10.dp)) {
                        Icon(Icons.Outlined.Search, null, tint = Color.Gray)
                        Spacer(modifier = Modifier.width(8.dp))
                        BasicTextField(
                            value = searchText,
                            onValueChange = { searchText = it },
                            singleLine = true,
                            modifier = Modifier.fillMaxWidth(),
                            textStyle = TextStyle(fontSize = 16.sp),
                            decorationBox = { inner ->
                                if (searchText.isEmpty()) {
                                    Text(
                                        "Search restaurants & dishes...",
                                        color = Color.DarkGray
                                    )
                                }
                                inner()
                            }
                        )
                    }
                }
            }

            item {
                Box(
                    modifier = Modifier
                        .padding(horizontal = 15.dp)
                        .height(150.dp)
                        .fillMaxWidth()
                        .background(
                            brush = Brush.horizontalGradient(
                                listOf(Color(0xFFFF7A18), Color(0xFFFFA94D))
                            ),
                            shape = RoundedCornerShape(30.dp)
                        )
                ) {
                    Column(modifier = Modifier.padding(15.dp)) {
                        Box(
                            modifier = Modifier
                                .background(Color(0xFFFFF3E0), RoundedCornerShape(50))
                                .padding(horizontal = 14.dp, vertical = 4.dp)
                        ) {
                            Text("50% OFF", color = Color(0xFFFF7A18), fontWeight = FontWeight.Bold)
                        }
                        Spacer(modifier = Modifier.height(15.dp))
                        Text("Free Delivery Week!", fontSize = 30.sp, fontWeight = FontWeight.Bold, color = Color.White)
                        Text("On orders above ₹150. Use code: FREEDEL", color = Color(0xFFFFF1E6))
                    }
                }
            }

            item {
                Row(
                    modifier = Modifier
                        .fillMaxWidth()
                        .padding(horizontal = 15.dp),
                    horizontalArrangement = Arrangement.SpaceBetween
                ) {
                    Text("Categories", fontSize = 25.sp, fontWeight = FontWeight.SemiBold)
                    Text("See all", color = Color(0xFFFF7A18))
                }
            }

            item {
                LazyRow(
                    modifier = Modifier.padding(start = 15.dp),
                    horizontalArrangement = Arrangement.spacedBy(16.dp)
                ) {
                    items(categories) {
                        CategoryItemUI(it)
                    }
                }
            }

            item {
                Row(
                    modifier = Modifier
                        .fillMaxWidth()
                        .padding(horizontal = 15.dp),
                    horizontalArrangement = Arrangement.SpaceBetween
                ) {
                    Text("Popular Near You", fontSize = 20.sp, fontWeight = FontWeight.SemiBold)
                    Text("See all", color = Color(0xFFFF7A18))
                }
            }

            items(restaurants) {
                RestaurantCard(it)
            }
        }
    }
}
