package com.example.myapplication.components

import androidx.compose.foundation.Image
import androidx.compose.foundation.background
import androidx.compose.foundation.layout.*
import androidx.compose.foundation.shape.CircleShape
import androidx.compose.foundation.shape.RoundedCornerShape
import androidx.compose.material.icons.Icons
import androidx.compose.material.icons.filled.Star
import androidx.compose.material.icons.outlined.AccessTime
import androidx.compose.material.icons.outlined.FavoriteBorder
import androidx.compose.material3.*
import androidx.compose.runtime.Composable
import androidx.compose.ui.Alignment
import androidx.compose.ui.Modifier
import androidx.compose.ui.draw.alpha
import androidx.compose.ui.graphics.Color
import androidx.compose.ui.layout.ContentScale
import androidx.compose.ui.res.painterResource
import androidx.compose.ui.text.font.FontWeight
import androidx.compose.ui.unit.dp
import androidx.compose.ui.unit.sp

// Composable to display a restaurant card with image, name, rating, cuisine, time & delivery info
@Composable
fun RestaurantCard(
    imageRes: Int,   // Resource ID of the restaurant image
    name: String,    // Name of the restaurant
    rating: String,  // Rating of the restaurant
    cuisine: String, // Cuisine description
    time: String,    // Estimated delivery time
    deliveryFee: String // Delivery fee information
) {
    // Card container with rounded corners and elevation
    Card(
        modifier = Modifier
            .fillMaxWidth()
            .padding(horizontal = 13.dp, vertical = 8.dp),
        shape = RoundedCornerShape(16.dp),
        elevation = CardDefaults.cardElevation(defaultElevation = 6.dp),
        colors = CardDefaults.cardColors(containerColor = Color.White)
    ) {
        Column {
            // Top image section of the card
            Box(
                modifier = Modifier
                    .fillMaxWidth()
                    .height(200.dp)
            ) {
                // Restaurant image filling the box
                Image(
                    painter = painterResource(id = imageRes),
                    contentDescription = name,
                    modifier = Modifier.fillMaxSize(),
                    contentScale = ContentScale.Crop
                )

                // Favorite icon (heart) on top-right of the image
                Box(
                    modifier = Modifier
                        .align(Alignment.TopEnd)
                        .padding(15.dp)
                        .size(35.dp)
                        .background(Color.White, CircleShape),
                    contentAlignment = Alignment.Center
                ) {
                    Icon(
                        imageVector = Icons.Outlined.FavoriteBorder,
                        contentDescription = null,
                        modifier = Modifier.alpha(0.5f) // Slight transparency
                    )
                }
            }

            // Column for restaurant details below the image
            Column(modifier = Modifier.padding(13.dp)) {

                // Row for restaurant name and rating badge
                Row(
                    modifier = Modifier.fillMaxWidth(),
                    horizontalArrangement = Arrangement.SpaceBetween,
                    verticalAlignment = Alignment.CenterVertically
                ) {
                    // Restaurant name
                    Text(
                        text = name,
                        fontSize = 17.sp,
                        fontWeight = FontWeight.SemiBold
                    )

                    // Rating badge with star icon
                    Box(
                        modifier = Modifier
                            .background(Color(0xFFE6F4EA), RoundedCornerShape(12.dp))
                            .padding(horizontal = 8.dp, vertical = 4.dp)
                    ) {
                        Row(verticalAlignment = Alignment.CenterVertically) {
                            Icon(
                                imageVector = Icons.Filled.Star,
                                contentDescription = null,
                                tint = Color(0xFF1BB924) // Green star
                            )
                            Spacer(modifier = Modifier.width(4.dp))
                            Text(
                                text = rating,
                                fontWeight = FontWeight.W500,
                                fontSize = 16.sp,
                                color = Color(0xFF1BB924)
                            )
                        }
                    }
                }

                Spacer(modifier = Modifier.height(6.dp))

                // Cuisine description text
                Text(
                    text = cuisine,
                    color = Color.Gray,
                    fontSize = 14.sp
                )

                Spacer(modifier = Modifier.height(6.dp))

                // Row for delivery time and fee info
                Row(verticalAlignment = Alignment.CenterVertically) {
                    Icon(
                        imageVector = Icons.Outlined.AccessTime,
                        contentDescription = null,
                        tint = Color.Gray,
                        modifier = Modifier.size(18.dp)
                    )
                    Spacer(modifier = Modifier.width(4.dp))
                    Text(time, color = Color.Gray, fontSize = 13.sp)
                    Spacer(modifier = Modifier.width(8.dp))
                    Text("â€¢", color = Color.Gray) // Separator dot
                    Spacer(modifier = Modifier.width(8.dp))
                    Text(deliveryFee, color = Color.Gray, fontSize = 13.sp)
                }
            }
        }
    }
}
